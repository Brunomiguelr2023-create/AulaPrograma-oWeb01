document.getElementById('toggle-contrast').addEventListener('click', () => {
  document.body.classList.toggle('high-contrast');
});

document.getElementById('toggle-theme').addEventListener('click', () => {
  document.body.classList.toggle('dark');
});
npm init -y
npm install clean-css-cli terser html-minifier --save-dev
"scripts": {
  "minify:css": "cleancss -o dist/style.min.css src/style.css",
  "minify:js": "terser src/script.js -o dist/script.min.js -c -m",
  "minify:html": "html-minifier --collapse-whitespace --remove-comments --minify-js true --minify-css true src/index.html -o dist/index.html",
  "build": "npm run minify:css && npm run minify:js && npm run minify:html"
}
npm run build
src/
  style.css
  script.js
  index.html
dist/
  style.min.css
  script.min.js
  index.html
  npm install imagemin-cli imagemin-mozjpeg imagemin-pngquant imagemin-svgo --save-dev
  "scripts": {
  "optimize:img": "imagemin src/images/* --plugin=pngquant --plugin=mozjpeg --plugin=svgo --out-dir=dist/images"
}
npm install gulp gulp-clean-css gulp-terser gulp-htmlmin gulp-imagemin --save-dev
const gulp = require('gulp');
const cleanCSS = require('gulp-clean-css');
const terser = require('gulp-terser');
const htmlmin = require('gulp-htmlmin');
const imagemin = require('gulp-imagemin');

gulp.task('minify-css', () =>
  gulp.src('src/css/*.css')
      .pipe(cleanCSS())
      .pipe(gulp.dest('dist/css'))
);

gulp.task('minify-js', () =>
  gulp.src('src/js/*.js')
      .pipe(terser())
      .pipe(gulp.dest('dist/js'))
);

gulp.task('minify-html', () =>
  gulp.src('src/*.html')
      .pipe(htmlmin({ collapseWhitespace: true, removeComments: true }))
      .pipe(gulp.dest('dist'))
);

gulp.task('optimize-img', () =>
  gulp.src('src/images/*')
      .pipe(imagemin())
      .pipe(gulp.dest('dist/images'))
);

gulp.task('build', gulp.parallel('minify-css', 'minify-js', 'minify-html', 'optimize-img'));
